{
	"name": "nyte",
	"version": "0.1.0",
	"description": "Server and main web app for Nyte",
	"license": "Apache-2.0",
	"scripts": {
		"dev": "cross-env NODE_ENV=development concurrently --kill-others-on-fail --handle-input \"pnpm:dev:server\" \"pnpm:dev:web\" --names \"server,web\" --prefix-colors \"cyan,magenta\"",
		"dev:server": "cross-env NODE_OPTIONS=--no-deprecation nest start --watch",
		"dev:web": "cross-env CLEAR_CONSOLE=false react-router dev",
		"build": "node scripts/clean-dist.mjs && pnpm lint && pnpm format && pnpm test && pnpm build:web && pnpm build:server && node scripts/move-web-build.mjs && pnpm test",
		"build:server": "nest build",
		"build:web": "react-router build",
		"start": "cross-env NODE_ENV=production node dist/server/main.js",
		"format": "prettier . --write",
		"lint": "eslint . --fix",
		"test": "echo 'cross-env NODE_OPTIONS=\"--experimental-vm-modules --disable-warning=ExperimentalWarning\" jest'",
		"coverage": "node scripts/clean-coverage.mjs && cross-env NODE_OPTIONS=\"--experimental-vm-modules --disable-warning=ExperimentalWarning\" jest --coverage && open-cli coverage/lcov-report/index.html",
		"e2e": "jest --config ./test/jest-e2e.json",
		"download-ffmpeg": "node scripts/download-ffmpeg-binaries.mjs autobuild-2025-12-29-12-57 n8.0.1-31-ge36046790a",
		"shadcn": "cross-env TS_NODE_PROJECT=./tsconfig.web.json pnpm dlx shadcn@latest"
	},
	"dependencies": {
		"@nestjs/common": "^11.0.1",
		"@nestjs/config": "^4.0.2",
		"@nestjs/core": "^11.0.1",
		"@nestjs/platform-express": "^11.0.1",
		"@nestjs/serve-static": "^5.0.4",
		"@nestjs/typeorm": "^11.0.0",
		"@radix-ui/react-separator": "^1.1.8",
		"@radix-ui/react-slot": "^1.2.4",
		"@react-router/node": "^7.10.1",
		"@tailwindcss/vite": "^4.1.18",
		"better-sqlite3": "^12.5.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"cross-env": "^10.1.0",
		"http-proxy-middleware": "^3.0.5",
		"isbot": "^5",
		"lucide-react": "^0.562.0",
		"mime-types": "^3.0.2",
		"react": "^19.2.1",
		"react-dom": "^19.2.1",
		"react-router": "^7.10.1",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.1",
		"tailwind-merge": "^3.4.0",
		"tailwindcss": "^4.1.18",
		"typeorm": "^0.3.28",
		"video.js": "^8.23.4",
		"videojs-mobile-ui": "^1.1.3",
		"yauzl": "^3.2.0"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.2.0",
		"@eslint/js": "^9.18.0",
		"@nestjs/cli": "^11.0.0",
		"@nestjs/schematics": "^11.0.0",
		"@nestjs/testing": "^11.0.1",
		"@react-router/dev": "^7.10.1",
		"@types/better-sqlite3": "^7.6.13",
		"@types/express": "^5.0.0",
		"@types/http-proxy": "^1.17.17",
		"@types/jest": "^30.0.0",
		"@types/mime-types": "^3.0.1",
		"@types/node": "^22.10.7",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"@types/supertest": "^6.0.2",
		"@types/yauzl": "^2.10.3",
		"@vitejs/plugin-react": "^5.1.1",
		"concurrently": "^9.2.1",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-prettier": "^5.2.2",
		"eslint-plugin-react": "^7.37.5",
		"globals": "^16.0.0",
		"jest": "^30.0.0",
		"open-cli": "^8.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"source-map-support": "^0.5.21",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.5",
		"ts-loader": "^9.5.2",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.2.6",
		"vite-tsconfig-paths": "^5.1.4"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src/server",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.controller.ts",
			"**/*.module.ts",
			"**/*.service.ts"
		],
		"coverageDirectory": "../../coverage",
		"testEnvironment": "node"
	}
}
